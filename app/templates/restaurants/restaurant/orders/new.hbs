<div class="container">
  <div class="new-form">
    <form class="form-horizontal well">
      <fieldset>
        <legend>Adding new item</legend>
        <div class="form-group">
          <div class="col-xs-12 col-sm-4">
            {{input type="text" placeholder="Note" value=name class="name-input"}}
          </div>                   
          <div class="col-xs-12 col-sm-4">
            {{#link-to 'restaurants.restaurant' class="btn btn-default" activeClass=""}}Cancel{{/link-to}}
            <button {{action 'placeOrder'}} class="btn btn-primary">Place Order</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>