<span>
  {{#link-to 'restaurants.restaurant.items.new' class="btn btn-primary btn-lg " activeClass=""}}Add a new menu item{{/link-to}}
</span>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <th>Restaurant</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |item index|}}
      <tr>
        <td>{{index}}</td>
        <td>{{item.name}}</td>
        <td>{{item.price}}</td>
        <td>{{item.restaurant.name}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>