<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="page-header">
        <h1>Add new item: {{name}}</h1>
      </div>
      <div class="new-form">
        <form class="form-horizontal well">
          <fieldset>
            <div class="form-group">
              <label for="inputName" class="col-xs-2 control-label">Name</label>
              <div class="col-xs-10">
                {{input type="text" placeholder="Name" value=name class="form-control"}}
              </div>
            </div>
            <div class="form-group">
              <label for="inputEmail" class="col-xs-2 control-label">Description</label>
              <div class="col-xs-10">
                {{input type="text" placeholder="Description" value=description class="form-control"}}
              </div>
            </div>   
            <div class="form-group">
              <label for="inputEmail" class="col-xs-2 control-label">Price</label>
              <div class="col-xs-10">
                {{input type="text" placeholder="Price" value=price class="form-control"}}
              </div>
            </div>          
            <div class="form-group">
              <label for="inputProfilePicture" class="col-xs-2 control-label">Item Picture URL</label>
              <div class="col-xs-10">
                {{input type="url" placeholder="URL to image" value=item_picture class="form-control"}}
              </div>
            </div>
            <div class="form-group text-center">
              <div class="col-sm-4 col-sm-offset-4">
                {{#link-to 'restaurants.restaurant' class="btn btn-default" activeClass=""}}Cancel{{/link-to}}
                <button {{action 'addItem'}} class="btn btn-primary">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>