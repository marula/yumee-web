<h1>{{model.name}}</h1>
<span>
  {{#link-to 'restaurants.restaurant.items.new' class="btn btn-primary btn-lg"}}Add a new menu item{{/link-to}}
  {{#link-to 'restaurants.restaurant.orders' class="btn btn-primary btn-lg"}}View orders{{/link-to}}
  {{#link-to 'restaurants.restaurant.tables' class="btn btn-primary btn-lg"}}View tables{{/link-to}}
  {{#link-to 'restaurants.restaurant.data' class="btn btn-primary btn-lg"}}View Data{{/link-to}}
  {{#if currentOrder}}
    {{#link-to 'restaurants.restaurant.orders.new' class="btn btn-success btn-lg"}}Place Order{{/link-to}}
  {{else}}
    {{#link-to 'restaurants.restaurant.orders.new' class="btn btn-success btn-lg disabled"}}Place Order{{/link-to}}
  {{/if}}
</span>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <th>Restaurant</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.items as |item index|}}
      <tr>
        <td>{{index}}</td>
        <td>{{item.name}}</td>
        <td>{{item.price}}</td>
        <td>{{item.restaurant.name}}</td>
        <td>{{#link-to 'restaurants.restaurant.items.item.edit' item class="btn btn-primary btn-lg"}}Edit item{{/link-to}}</td>
        <td><button {{action 'addItem' item}} class="btn btn-primary">Add to order</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>
