<h1>Sales</h1>
{{#nf-graph width=600 
			height=300 
			paddingRight=40 
			paddingTop=10
			showLanes=true
    		showFrets=true}}
  {{#nf-graph-content}}
   
    {{nf-line data=model.salesData
		trackingMode="snap-last"
		trackedData=tracked}}

	{{nf-horizontal-line y=tracked.y}}
	{{nf-vertical-line x=tracked.x}}

  {{/nf-graph-content}}

    
  {{#nf-y-axis as |tick|}}
    <text>{{tick.value}}</text>
  {{/nf-y-axis}}


  {{#nf-x-axis as |tick|}}
    <text>{{moment tick.value "MMMM" "M"}}</text>
  {{/nf-x-axis}}

  
{{/nf-graph}}
<text>Sales on {{moment tracked.x "MMMM" "M"}} is {{tracked.y}}</text>