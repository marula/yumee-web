<div class="new-rst-form">
  <form class="form-horizontal">
    <fieldset>
      <legend>Adding new restaurant</legend>
      <div class="form-group">
        <div class="col-xs-12 col-sm-4">
          {{input type="text" placeholder="Name" value=name class="name-input"}}
        </div>
        <div class="col-xs-12 col-sm-4">
          {{input type="text" placeholder="Email" value=email class="email-input"}}
        </div>
        <div class="col-xs-12 col-sm-4">
          {{#link-to 'restaurants' class="btn btn-default" activeClass=""}}Cancel{{/link-to}}
          <button {{action 'addRestaurant'}} class="btn btn-primary">Submit</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>