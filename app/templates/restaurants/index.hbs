<div>
  {{#link-to 'restaurants.new' class="btn btn-primary btn-lg " activeClass=""}}Add a new restaurant{{/link-to}}
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Restaurant Name</th>
      <th>Email Address</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |restaurant index|}}
      <tr>
        <td>{{index}}</td>
        <td>{{#link-to 'restaurants.restaurant' restaurant}}{{restaurant.name}}{{/link-to}}</td>
        <td>{{restaurant.email}}</td>
        <td>{{#link-to 'restaurants.restaurant.edit' restaurant class="btn btn-primary btn-lg " activeClass=""}}Edit restaurant{{/link-to}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>